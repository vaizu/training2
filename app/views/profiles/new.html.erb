<div class="container">
  <div class="row">
    <div class="col-6 mb-5">
      <h2 class="text-center light2 mt-5 ml-5 col-8">新規PROFiLE投稿</h2>
    </div>
  </div>

  <%#エラー文%>
  <% if @profile.errors.any? %>
    <%= @profile.errors.count %>件のエラーが発生しました
    <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row">
    <div class="col-10 mb-5 offset-2">
      <%= form_with model: @profile, local: true do |f| %>
        <form>
          <div class="form-group col-xs-9">
            <%= f.label :"PROFiLE", class: "col-sm-2 light" %>
            <%= f.text_area :profile, placeholder: "PROFiLE", class: "col-sm-6 p-1", rows:"20" %>
          </div>
          <div class="form-group col-10 text-center">
            <%= f.submit "投稿", class: "btn btn-success col-sm-2" %>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>
